@page
@model Assignment_RazorWeb.Pages.Courses.IndexModel
@{
    ViewData["Title"] = "Courses";
}

<h2>Courses</h2>

<p>
    <a asp-page="Create">Create New Course</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Instructor</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.Courses)
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.Instructor</td>
                <td>@course.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@course.EndDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-page="Details" asp-route-id="@course.Id" class="btn btn-info">View Details</a>
                    <a asp-page="Edit" asp-route-id="@course.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="Delete" asp-route-id="@course.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>