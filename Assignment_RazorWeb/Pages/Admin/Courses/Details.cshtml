@page "{id}"
@model Assignment_RazorWeb.Pages.Courses.DetailModel
@{
    ViewData["Title"] = Model.Course.Title;
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<div class="container mt-5">
    <h2 class="text-center mb-4">@Model.Course.Title</h2>

    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Course.ImageUrl" alt="@Model.Course.Title" class="img-fluid rounded" />
        </div>
        <div class="col-md-6">
            <h5 class="font-weight-bold">Instructor: @Model.Course.Instructor</h5>
            <p class="font-weight-light"><strong>Description:</strong></p>
            <p>@Model.Course.Description</p>
            <p><strong>Start Date:</strong> @Model.Course.StartDate.ToString("MM/dd/yyyy")</p>
            <p><strong>End Date:</strong> @Model.Course.EndDate.ToString("MM/dd/yyyy")</p>
            <p><strong>Status:</strong> @(Model.Course.IsActive ? "Active" : "Inactive")</p>
            <div class="text-center mt-4">
                <a asp-page="Index" class="btn btn-secondary">Back to Courses</a>
            </div>
        </div>
    </div>
</div>

